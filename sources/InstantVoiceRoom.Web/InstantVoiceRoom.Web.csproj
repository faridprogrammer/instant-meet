<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>InstantVoiceRoom.Web</RootNamespace>
    <UserSecretsId>ab24afee-95d5-4608-b059-0d1daad03934</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" Version="2.3.0" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="9.0.6" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="9.0.7">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.7" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="9.0.7">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Serilog.AspNetCore" Version="9.0.0" />
    <PackageReference Include="Serilog.Settings.Configuration" Version="9.0.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Services\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\InstantVoiceRoom.CLI\InstantVoiceRoom.CLI.csproj" />
    <ProjectReference Include="..\InstantVoiceRoom.Framework\InstantVoiceRoom.Framework.csproj" />
  </ItemGroup>

<!-- Custom target to build InstantVoiceRoom.CLI and copy its output -->
  <Target Name="BuildAndCopyCLI" AfterTargets="Build">
    <!-- Build the InstantVoiceRoom.CLI project -->
    <MSBuild Projects="..\InstantVoiceRoom.CLI\InstantVoiceRoom.CLI.csproj"
             Targets="Build"
             Properties="Configuration=$(Configuration);Platform=$(Platform)" />

    <!-- Copy the CLI project output to the Web project's output directory -->
    <ItemGroup>
      <CLIOutputFiles Include="..\InstantVoiceRoom.CLI\bin\$(Configuration)\net8.0\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(CLIOutputFiles)"
          DestinationFolder="$(OutDir)"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
