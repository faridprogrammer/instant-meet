@page
@using Microsoft.AspNetCore.Authorization
@model InstantVoiceRoom.Pages.IndexModel
@attribute [Authorize]

<style>
  :root {
    --primary: #0069c0;
    --primary-light: #337ab7;
    --bg: #f5f5f5;
    --font: 'Segoe UI', sans-serif;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: var(--font);
    background: var(--bg);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }

  .container {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    width: 360px;
    padding: 24px;
  }

  h1 {
    margin-top: 0;
    font-size: 1.5em;
    text-align: center;
    color: var(--primary);
  }

  .field {
    margin-bottom: 16px;
  }

  .field label {
    display: block;
    margin-bottom: 4px;
    font-weight: bold;
    font-size: 0.9em;
  }

  .field input {
    width: 100%;
    padding: 8px;
    font-size: 1em;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .buttons {
    text-align: center;
    margin-bottom: 16px;
  }

  button {
    padding: 10px 20px;
    font-size: 1em;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  button.join {
    background: var(--primary);
    color: white;
  }

  button.join:hover {
    background: var(--primary-light);
  }

  button.leave {
    background: #d9534f;
    color: white;
    margin-left: 8px;
  }

  button.leave:hover {
    background: #c9302c;
  }

  #status {
    text-align: center;
    font-style: italic;
    margin-bottom: 16px;
  }

  #userList {
    list-style: none;
    padding: 0;
    max-height: 120px;
    overflow-y: auto;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin: 0;
  }

  #userList li {
    padding: 6px 8px;
    border-bottom: 1px solid #eee;
  }

  #userList li:last-child {
    border-bottom: none;
  }
</style>
<div class="container">
  <h1>Instant Voice Meet</h1>
  <input type="hidden" id="stunServer" value="@Model.StunServer" />
  <div class="field">
    <label for="nameInput">Your Name</label>
    <input id="nameInput" value="@Model.CurrentUserName" />
  </div>

  <div class="buttons">
    <button class="leave" id="leaveBtn" disabled>Leave</button>
  </div>

  <div id="status">Not connected</div>

  <h3>Participants</h3>
  <ul id="userList"></ul>
</div>

@section Scripts {

<script src="~/lib/signalr/signalr.min.js"></script>
<script src="~/js/webrtc.js" asp-append-version="true" ></script>


<script>
  $(document).ready(async () => {

    await startMeeting();

  });  
</script>
}

